{
  "$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
  "vcs": {
    "enabled": true,
    "clientKind": "git",
    "useIgnoreFile": true
  },
  "files": {
    "ignore": ["./src/components/ui/**", "**/*.css"]
  },
  "formatter": {
    "indentStyle": "space",
    "indentWidth": 4
  },
  "linter": {
    "rules": {
      "a11y": {
        "noSvgWithoutTitle": "off"
      },
      "suspicious": {
        "noArrayIndexKey": "off",
        "noDoubleEquals": {
          "fix": "safe",
          "level": "warn",
          "options": {}
        }
      },
      "style": {
        "noNonNullAssertion": "off",
        "useSelfClosingElements": {
          "fix": "safe",
          "level": "warn"
        },
        "useTemplate": {
          "fix": "safe",
          "level": "warn"
        }
      },
      "nursery": {
        "useSortedClasses": {
          "fix": "safe",
          "level": "info",
          "options": {
            "functions": ["cn"]
          }
        }
      }
    }
  },
  "javascript": {
    "formatter": {
      "semicolons": "asNeeded",
      "trailingCommas": "none"
    }
  }
}
